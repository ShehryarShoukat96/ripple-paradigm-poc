
{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["dom", "es2017"],
    "baseUrl": "./src",
    "paths": {
      "@dtos/*": ["dtos/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@modules/*": ["modules/*"],
      "@middlewares": ["middlewares/index"]
    }
  },
  "exclude": ["node_modules", "lib"]
}