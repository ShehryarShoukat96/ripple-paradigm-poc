{
  "name": "rippple-server",
  "version": "1.0.0",
  "description": "A simple NodeJS Server.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "yarn lint",
    "lint": "eslint --fix",
    "build": "tsc",
    "build:dev": "tsc --watch",
    "prestart": "yarn build",
    "start": "node .",
    "start:dev": "nodemon --inspect .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Shehryar Shoukat",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "husky": "^4.3.7",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "socket.io": "^2.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.7",
    "@types/node": "^14.6.1",
    "@types/socket.io": "^2.1.11",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4"
  },
  "_moduleAliases": {
    "@dtos": "dist/dtos",
    "@utils": "dist/utils",
    "@routes": "dist/routes",
    "@modules": "dist/modules",
    "@middlewares": "dist/middlewares"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
